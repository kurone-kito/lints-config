{
  "name": "@kurone-kito/lints-config",
  "version": "0.3.0",
  "private": true,
  "description": "My configuration for the ESLint / Prettier / TypeScript",
  "keywords": [
    "config",
    "eslint",
    "eslintconfig",
    "prettier",
    "typescript"
  ],
  "homepage": "https://github.com/kurone-kito/lints-config#readme",
  "bugs": "https://github.com/kurone-kito/lints-config/issues",
  "repository": "github:kurone-kito/lints-config",
  "license": "MIT",
  "author": "kurone-kito <krone@kit.black> (https://kit.black/)",
  "type": "module",
  "files": [],
  "workspaces": {
    "packages": [
      "./packages/*"
    ]
  },
  "scripts": {
    "build": "yarn run sub run build",
    "clean": "conc \"yarn:clean:*\"",
    "clean:root": "rimraf -g \".eslintcache\" \"*.tgz\" \"*.tsbuildinfo\" \"undefined\"",
    "clean:sub": "yarn run sub run clean",
    "postinstall": "husky install",
    "lint": "conc -m 1 \"yarn:lint:*:check\"",
    "lint:eslint:check": "eslint --cache --cache-strategy=content -f codeframe \"./**/*\"",
    "lint:eslint:fix": "yarn run lint:eslint:check --fix",
    "lint:fix": "conc -m 1 \"yarn:lint:*:fix\"",
    "lint:prettier:check": "yarn run prettier -cu",
    "lint:prettier:fix": "yarn run prettier -uw",
    "prettier": "prettier --cache --loglevel=warn \"$@\" \"./**/*\"",
    "publish": "yarn workspaces foreach --no-private -t -j 1 npm publish",
    "start": "yarn run sub -j unlimited run start",
    "sub": "yarn workspaces foreach --no-private -ipv",
    "test": "yarn run lint"
  },
  "prettier": "@kurone-kito/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@cspell/eslint-plugin": "^6.31.1",
    "@kurone-kito/eslint-config-base": "workspace:*",
    "@kurone-kito/prettier-config": "workspace:*",
    "@kurone-kito/typescript-config": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@yarnpkg/sdks": "^3.0.0-rc.42",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-editorconfig": "^4.0.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^43.1.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.3",
    "prettier-plugin-sh": "^0.12.8",
    "prettier-plugin-sort-json": "^1.0.0",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.0",
    "typescript": "~5.0.4",
    "typescript-eslint-language-service": "^5.0.5"
  },
  "packageManager": "yarn@3.5.0",
  "engines": {
    "node": ">=16.20",
    "yarn": ">=2.4.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
